<div class="container">
    <h1>게시판입니다</h1>
    <form action="/write" method="POST">
      <div class="form-group">
        <label for="exampleInputEmail1">제목</label>
        <input name="title" type="text" class="form-control" id="exampleInputEmail1" placeholder="제목을 써주세요">
      </div>
      <div class="form-group">
        <label for="comment">내용</label>
        <textarea name="content" class="form-control" rows="5" id="comment"></textarea>
      </div>
      <button type="submit" class="btn btn-default">전송</button>
    </form>
    <p><%=@user_id %></p>
</div>